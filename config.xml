<?xml version='1.0' encoding='utf-8'?>
<widget id="com.qs" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mana Dairy</name>
    <description>
        A quikshop application that responds to the deviceready event.
    </description>
    <author email="mr.abdulrasheed58@gmail.com" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarBackgroundColor" value="#15C39A" />
  <preference name="StatusBarStyle" value="lightcontent" />
<!--    <icon src="assets/icons/apple-icon.png" />-->
    <platform name="android">
        <allow-intent href="market:*" />
      <icon src="res/icons/android/icon-36-ldpi.png" density="ldpi"/>
      <icon src="res/icons/android/icon-48-mdpi.png" density="mdpi"/>
      <icon src="res/icons/android/icon-72-hdpi.png" density="hdpi"/>
      <icon src="res/icons/android/icon-96-xhdpi.png" density="xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
